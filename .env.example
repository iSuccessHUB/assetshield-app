# AssetShield Pro - Environment Variables Configuration
# Copy this file to .env for local development
# For production, set these variables in your deployment environment

# ================================
# SECURITY CONFIGURATION
# ================================

# JWT Secret Key - CRITICAL: Generate a cryptographically secure random string (64+ characters)
# Use: openssl rand -base64 64
JWT_SECRET=your-super-secure-64-character-random-jwt-secret-key-change-this-immediately

# Database Encryption Key (32 bytes, base64 encoded)
DB_ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key-for-sensitive-data

# CSRF Protection Secret
CSRF_SECRET=your-csrf-protection-secret-key

# ================================
# STRIPE PAYMENT CONFIGURATION
# ================================

# Stripe Publishable Key (starts with pk_)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Secret Key (starts with sk_) - KEEP SECRET
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret (starts with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ================================
# DATABASE CONFIGURATION
# ================================

# Cloudflare D1 Database ID (for production)
CLOUDFLARE_D1_DATABASE_ID=your-d1-database-id

# Database Connection Pool Settings
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30000

# ================================
# EMAIL SERVICE CONFIGURATION
# ================================

# SMTP Configuration for transactional emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@assetshieldapp.com
FROM_NAME=AssetShield Pro

# SendGrid API Key (alternative to SMTP)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# ================================
# SECURITY & MONITORING
# ================================

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# IP Blocking (comma-separated list)
BLOCKED_IPS=192.168.1.100,10.0.0.50

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://assetshieldapp.com/csp-report

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================

# Google Analytics / Google Tag Manager
GA_TRACKING_ID=GA-XXXXXXXXX-X
GTM_CONTAINER_ID=GTM-XXXXXXX

# OpenStreetMap Nominatim (for address lookup)
NOMINATIM_USER_AGENT=AssetShield-Pro/1.0

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable features
FEATURE_DEMO_MODE=true
FEATURE_ANALYTICS=true
FEATURE_EMAIL_CAMPAIGNS=true
FEATURE_LEAD_SCORING=true

# ================================
# DEPLOYMENT CONFIGURATION
# ================================

# Environment (development, staging, production)
NODE_ENV=development

# Application URL
APP_URL=https://assetshieldapp.com

# CDN Configuration
CDN_URL=https://cdn.assetshieldapp.com

# ================================
# LOGGING & MONITORING
# ================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# External Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ================================
# BACKUP & MAINTENANCE
# ================================

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Scheduled maintenance in progress"

# ================================
# LEGAL & COMPLIANCE
# ================================

# Privacy Policy URL
PRIVACY_POLICY_URL=https://assetshieldapp.com/privacy
TERMS_OF_SERVICE_URL=https://assetshieldapp.com/terms

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365

# ================================
# NOTES
# ================================

# 1. Never commit .env files to version control
# 2. Rotate secrets regularly (every 90 days minimum)
# 3. Use different secrets for development, staging, and production
# 4. Store production secrets in secure key management systems
# 5. Monitor for secret exposure in logs and error messages
# 6. Use environment-specific configuration for each deployment